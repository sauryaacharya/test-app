{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "ignorePatterns": [
    "node_modules/",
    "config/",
    "scripts/",
    "build/",
    "coverage/",
    "serviceWorker.js"
  ],
  "rules": {
    "no-unused-vars": "error",
    "no-console": "error",
    "curly": ["error", "all"],
    "no-empty-pattern": "error",
    "comma-dangle": ["error", "always-multiline"],
    "no-nested-ternary": "error",
    "no-var": "error",
    "no-trailing-spaces": "error"
  }
}
